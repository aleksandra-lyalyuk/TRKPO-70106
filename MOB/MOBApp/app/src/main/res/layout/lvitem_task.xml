<?xml version="1.0" encoding="utf-8"?>
<!-- ***************************************************** -->
<!-- Компонент списка (задача) "Задачи маршрутного листа"  -->
<!-- ***************************************************** -->
<LinearLayout
        android:id="@+id/lvItemTask"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:maxHeight="190dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:maxHeight="190dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
        >

            <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="95dp"
                    android:orientation="vertical"
            >
                <TextView
                        android:id="@+id/tvIdTask"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"
                        android:background="@color/colorLightGrayB0"
                        android:text="000"
                        android:contentDescription="Номер посещения"
                        android:textColor="@color/colorBlack"
                        android:textSize="22sp"
                />
                <!-- СТАТУС -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/tv1"
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center_vertical"
                            android:text="Статус: "
                            style="@style/TvCaptionTheme"/>
                    <TextView
                            android:id="@+id/tvTaskStatus"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="Отредактирован руководителем "
                            android:layout_marginHorizontal="15dp"
                            style="@style/TvCaptionTheme"/>
                    <ImageView
                            android:id="@+id/imageTaskStatus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                    />
                </LinearLayout>

                <!-- <TextView
                         android:layout_width="90dp"
                         android:layout_height="30dp"
                         android:layout_marginTop="5dp"
                         android:layout_marginStart="7dp"
                         android:text="Объект: "
                         android:theme="@style/TvCaptionTheme"
                 />-->
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                <!-- ДАТА И ВРЕМЯ ПОСЕЩЕНИЯ -->
                <LinearLayout
                        android:id="@+id/lvData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                >
                    <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text=" Планируемое \n время посещения: "
                            android:textSize="16dp"
                            android:textColor="@color/colorDarkGray"/>
                    <TextView
                            android:id="@+id/tvTaskDate"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom"
                            android:layout_gravity="bottom"
                            android:text="10 ч. 00 мин.    10 сентября 2020 г. "
                            android:textSize="22sp"
                            android:theme="@style/TvDataTheme"/>
                </LinearLayout>

                <!-- ЦЕЛЬ ПОСЕЩЕНИЯ -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                >
                    <TextView
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:text="Цель посещения: "
                            android:textSize="16dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorDarkGray"
                    />
                    <Spinner
                            android:id="@+id/spTaskPurpose"
                            android:layout_width="240dp"
                            android:layout_height="30dp"
                            android:clickable="false"
                            android:textSize="22sp"
                            android:theme="@style/TvDataTheme"
                    />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <!-- АДРЕС -->
        <LinearLayout
                android:id="@+id/lvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:minHeight="0dp"
                android:maxHeight="90dp"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:theme="@style/TvCaptionTheme"
            />
            <EditText
                    android:id="@+id/etTaskAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:maxHeight="90dp"
                    android:inputType="textMultiLine"
                    android:textIsSelectable="true"
                    android:background="@android:color/transparent"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:hint="Адрес объекта "
                    android:textColor="@color/colorPrimaryDark"
                    android:theme="@style/EtDataTheme"
            />
      </LinearLayout>
      </LinearLayout>
</LinearLayout>
