<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:descendantFocusability="blocksDescendants"
        android:clickable="true"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/lvItemActWithPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/imgTaskActIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|top"
                android:layout_margin="5dp"
                android:background="@drawable/ic_pdf_gray"
        />
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|top"
                android:gravity="center_vertical|top"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvTaskActName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:text="Акт о результатах проведения гидропневматической промывки"
                    style="@style/TvCaptionTheme"
            />

        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|top"
                    android:gravity="center_vertical|top"
                    android:orientation="vertical">
                <CheckBox
                        android:id="@+id/chkBoxTaskActSigned"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical|top"
                        android:gravity="center_vertical"
                        android:text="Подписан"
                        android:clickable="false"
                        android:textSize="17sp"
                        android:textColor="@color/colorDarkGray"
                />
                <CheckBox
                        android:id="@+id/chkBoxTaskActPaper"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical|top"
                        android:gravity="center_vertical"
                        android:clickable="false"
                        android:text="Бумажный"
                        android:textSize="17sp"
                        android:textColor="@color/colorDarkGray"
                />
            </LinearLayout>

            <Button
                    android:id="@+id/btnShowActs"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:gravity="top"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:cropToPadding="true"
                    android:scaleType="centerInside"
                    android:drawableStart="@drawable/ic_attach"
                    android:tint="@color/colorPrimaryDark"
                    android:tooltipText="Бумажный акт"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    tools:ignore="ContentDescription"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>