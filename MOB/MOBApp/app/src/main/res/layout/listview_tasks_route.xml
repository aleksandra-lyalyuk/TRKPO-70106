<?xml version="1.0" encoding="utf-8"?>

<!-- **********************************************************  -->
<!--   Список ListView "Маршрутный лист" (список всех заданий)   -->
<!-- **********************************************************  -->

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListTasksActivity"
        android:orientation="vertical"
>

    <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarLvTasks"
            android:layout_centerInParent="true"
            layout="@layout/progress_bar_data_load"
    />
    <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarLvTasksUpload"
            android:layout_centerInParent="true"
            android:visibility="gone"
            layout="@layout/progress_bar_data_upload"
    />

    <TextView
            android:id="@+id/tvRouteMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray60"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            style="@style/TvDataTheme"
            android:layout_gravity="bottom|center_horizontal"/>

    <ListView
            android:id="@+id/listViewRouteTasks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:dividerHeight="0dp"
            android:divider="@null"
            android:showDividers="middle"
            android:dividerPadding="15dp"/>
</RelativeLayout>
