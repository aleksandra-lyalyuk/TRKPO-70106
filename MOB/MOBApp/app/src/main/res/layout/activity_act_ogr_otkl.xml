<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_above="@id/actTip7Buttons">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_margin="10dp"
                android:paddingBottom="20dp"
                android:orientation="vertical">
            <EditText
                    android:id="@+id/actTip7FilialEso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:hint="Филиал"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="4dp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:maxLength="200"
                    style="@style/EtDataThemeNoFrame"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold"
                    android:text="  АКТ об ограничении (отключении) подачи тепловой энергии, теплоносителя  "
                    style="@style/TvCaptionTheme"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="  от  "
                        style="@style/TvCaptionTheme"
                />
                <TextView
                        android:id="@+id/actTip7DatAct"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textStyle="bold"
                        style="@style/TvCaptionTheme"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="  №  "
                        style="@style/TvCaptionTheme"
                />

                <TextView
                        android:id="@+id/actTip7NumAct"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        style="@style/TvCaptionTheme"
                />
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Наименование абонента:  "
                    style="@style/TvCaptionTheme"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/actTip7Id"
                    app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                    android:id="@+id/actTip7PayerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Наименование абонента "
                    android:maxLength="4000"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    style="@style/EtDataThemeNoFrame"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Наименование объекта:  "
                    style="@style/TvCaptionTheme"
                    android:layout_marginTop="4dp"/>
            <EditText
                    android:id="@+id/actTip7NameObj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Наименование объекта"
                    style="@style/EtDataThemeNoFrame"
                    android:maxLength="4000"
                    android:maxLines="5"
                    android:inputType="textMultiLine"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TvCaptionTheme"
                        android:text="Договор № "
                />
                <TextView
                        android:id="@+id/actTip7NDog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TvCaptionTheme"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TvCaptionTheme"
                        android:text=" от "
                />
                <TextView
                        android:id="@+id/actTip7DatDog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TvCaptionTheme"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TvCaptionTheme"
                        android:text="Задолженность на"
                />
                <TextView
                        android:id="@+id/actTip7DatAct1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Дата"
                        style="@style/TvCaptionTheme"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TvCaptionTheme"
                        android:text=" составляет "
                />
                <EditText
                        android:id="@+id/actTip7SumDolg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:inputType="text"
                        style="@style/EtDataThemeNoFrame"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TvCaptionTheme"
                        android:text="Предупреждение о погашении задолженности: №  "
                />
                <EditText
                        android:id="@+id/actTip7PredPogashDolgNum"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:inputType="text"
                        android:hint="Номер"
                        style="@style/EtDataThemeNoFrame"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TvCaptionTheme"
                        android:text=" от "
                />
                <EditText
                        android:id="@+id/actTip7PredPogashDolgDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:hint="Дата"
                        android:inputType="text"
                        style="@style/EtDataThemeNoFrame"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TvCaptionTheme"
                        android:text="Уведомление об ограничении (отключении): №  "
                />
                <EditText
                        android:id="@+id/actTip7UvedomlOtklNum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:inputType="text"
                        android:hint="Номер"
                        style="@style/EtDataThemeNoFrame"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TvCaptionTheme"
                        android:text=" от "
                />
                <EditText
                        android:id="@+id/actTip7UvedomlOtklDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:hint="Дата"
                        android:inputType="text"
                        style="@style/EtDataThemeNoFrame"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="bottom"
                    android:orientation="vertical"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TvCaptionTheme"
                        android:text="Акт составлен представителем АО «Татэнерго»:  "
                />
                <EditText
                        android:id="@+id/actTip7FioEso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="400"
                        android:maxLines="1"
                        android:inputType="text"
                        android:hint="Ф.И.О."
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        style="@style/EtDataThemeNoFrame"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
            >
                <EditText
                        android:id="@+id/actTip7NameDolzhnEso"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:maxLength="400"
                        android:maxLines="1"
                        android:hint="должность"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        style="@style/EtDataThemeNoFrame"
                />
                <EditText
                        android:id="@+id/actTip7TelEso"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:hint="@string/tel_fake"
                        android:inputType="phone"
                        style="@style/EtDataThemeNoFrame"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TvCaptionTheme"
                        android:text="в присутствии: "
                />
                <TextView
                        android:id="@+id/actTip7FioPodp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ф.И.О."
                        style="@style/TvDataTheme"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
            >
                <TextView
                        android:id="@+id/actTip7NameDolzhnPodp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="должность"
                        style="@style/TvDataTheme"
                />
                <TextView
                        android:id="@+id/actTip7TelPodp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:hint="@string/tel_fake"
                        style="@style/TvDataTheme"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="bottom"
                    android:orientation="vertical"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TvCaptionTheme"
                        android:text="Ограничение (отключение) произведено:  "
                />
                <EditText
                        android:id="@+id/actTip7OtklProizv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="400"
                        android:maxLines="5"
                        android:inputType="textMultiLine"
                        android:hint="указать способ ограничения (отключения), места установки пломб и т.д."
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        style="@style/EtDataThemeNoFrame"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="bottom"
                    android:orientation="vertical"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TvCaptionTheme"
                        android:text="Показания приборов учета до ограничения (отключения): "
                />
                <EditText
                        android:id="@+id/actTip7OtklPuPokazDo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:inputType="textMultiLine"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        style="@style/EtDataThemeNoFrame"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="bottom"
                    android:orientation="vertical"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TvCaptionTheme"
                        android:text="Показания приборов учета после ограничения (отключения): "
                />
                <EditText
                        android:id="@+id/actTip7OtklPuPokazPosle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:inputType="textMultiLine"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        style="@style/EtDataThemeNoFrame"
                />
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="На основании составленного акта от Вам необходимо обеспечить выполнение следующих мероприятий:\n
1. Обеспечить сохранность оборудования и материальных ценностей, безопасность персонала.\n
2. Принять меры для предотвращения размораживания систем теплоснабжения.\n
3. Обеспечить сохранность пломб. Ответственность за сохранность пломб несёт потребитель.\n
4. Оплатить задолженность."
                    style="@style/TvCaptionTheme"
                    android:layout_marginTop="40dp"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        style="@style/TvCaptionTheme"
                        android:text="5."
                />
                <EditText
                        android:id="@+id/actTip7DopInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:maxLength="1000"
                        android:maxLines="10"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        style="@style/EtDataThemeNoFrame"
                        android:inputType="textMultiLine"
                />
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="При невыполнении мероприятий, указанных в пунктах 1 - 3, вся ответственность за последствия возлагается на руководителей Вашего предприятия."
                    android:textStyle="italic"
                    style="@style/TvCaptionTheme"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    style="@style/TvCaptionTheme"
                    android:text="Замечания абонента:"
            />
            <EditText
                    android:id="@+id/actTip7RemarkDog"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:hint="Замечания абонента"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:maxLength="4000"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    style="@style/EtDataThemeNoFrame"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Об устранении нарушений сообщить в письменном виде в филиал АО «Татэнерго» -"
                    style="@style/TvCaptionTheme"/>

            <TextView
                    android:id="@+id/actTip7FilialEso1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="200"
                    android:hint="Филиал"
                    android:inputType="textMultiLine"
                    style="@style/EtDataThemeNoFrame"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="по адресу:"
                    style="@style/TvCaptionTheme"/>

            <EditText
                    android:id="@+id/actTip7FilialAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Адрес"
                    android:maxLength="1000"
                    android:maxLines="5"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    style="@style/EtDataThemeNoFrame"
                    android:inputType="textMultiLine"
            />
            <EditText
                    android:id="@+id/actTip7FilialTel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Телефон"
                    android:maxLines="1"
                    android:maxLength="100"
                    style="@style/EtDataThemeNoFrame"
                    android:inputType="phone"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Представитель АО «Татэнерго»:"
                    style="@style/TvCaptionTheme"
            />
            <TextView
                    android:id="@+id/actTip7Eso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Представитель АО «Татэнерго»"
                    style="@style/TvDataTheme"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Представитель абонента: "
                    style="@style/TvCaptionTheme"
            />
            <TextView
                    android:id="@+id/actTip7Contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:hint="Представитель абонента"
                    style="@style/TvDataTheme"
            />


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Экземпляр акта получил: "
                    style="@style/TvCaptionTheme"/>
            <EditText
                    android:id="@+id/actTip7ActPoluchil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Должность, ФИО, телефон"
                    android:maxLines="5"
                    android:maxLength="1000"
                    style="@style/EtDataThemeNoFrame"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:inputType="textMultiLine"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=" (должность, ФИО, телефон) "
                    style="@style/TvCaptionTheme"
            />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <LinearLayout
            android:id="@+id/actTip7Buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/frame_rectangle"
    >
        <Spinner
                android:id="@+id/actTip7SpCopyText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"
        />

        <Button
                android:text="  Создать   акт  "
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCreateActOrgOtkl"
                android:layout_margin="10dp"
        />
        <Button
                android:text="  Подписать   акт  "
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSignActOgrOtkl"
                android:enabled="false"
                android:layout_margin="10dp"
        />
    </LinearLayout>
</RelativeLayout>