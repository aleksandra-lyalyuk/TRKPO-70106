<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="2dp">

    <ImageView
            android:id="@+id/ivAttachmentTypeDoc"
            android:layout_margin="5dp"
            android:foregroundGravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvAttachmentFileName"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_pdf_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/tvAttachmentFileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TvCaptionTheme"
            android:text="Акт проверки филиалом готовности абонента к отопительному периоду "
            app:layout_constraintStart_toEndOf="@+id/ivAttachmentTypeDoc"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>