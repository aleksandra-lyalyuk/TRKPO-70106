<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_above="@id/actTip10Buttons">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_margin="10dp"
                android:paddingBottom="20dp"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="  Акт преддоговорного осмотра (Карточка АСУСЭ по тепловым сетям) "
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="4dp"
                    android:textStyle="bold"
                    style="@style/TvCaptionTheme"
            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:textStyle="bold"
                        android:text="№ "
                        style="@style/TvCaptionTheme"
                />
                <TextView
                        android:id="@+id/actTip10NumAct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:textStyle="bold"
                        style="@style/TvCaptionTheme"
                />

                <TextView
                        android:id="@+id/actTip10Date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:clickable="true"
                        android:text="10 сентября 2020"
                        android:background="@android:color/transparent"
                        style="@style/TvCaptionTheme"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="4dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Тепловые сети от : "
                        style="@style/TvCaptionTheme"/>

                <EditText
                        android:id="@+id/actTip10NameTk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="1000"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        style="@style/EtDataThemeNoFrame"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="4dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="абонентского ввода:  "
                        style="@style/TvCaptionTheme"/>
                <EditText
                        android:id="@+id/actTip10NameAw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/EtDataThemeNoFrame"
                        android:maxLength="1000"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="4dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="объект :  "
                        style="@style/TvCaptionTheme"/>
                <EditText
                        android:id="@+id/actTip10NameObj"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/EtDataThemeNoFrame"
                        android:maxLength="500"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                />
            </LinearLayout>


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    style="@style/TvCaptionTheme"
                    android:text="Схемы присоединения к абонентскому вводу:"
            />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Наименование мероприятий"
                            android:paddingVertical="5dp"
                            android:background="@drawable/frame_rectangle"
                            style="@style/GvHeaderThemeActs"
                    />
                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Тип"
                            android:paddingVertical="5dp"
                            android:background="@drawable/frame_rectangle"
                            style="@style/GvHeaderThemeActs"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Схема присоединения системы отопления"
                            android:background="@drawable/frame_rectangle"
                            style="@style/GvItemsTheme"
                    />
                    <EditText
                            android:id="@+id/actTip10NalSo"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:maxLength="100"
                            android:inputType="textMultiLine"
                            android:maxLines="3"
                            android:hint="Схема присоединения системы отопления"
                            android:background="@drawable/frame_rectangle"
                            style="@style/GvItemsTheme"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Схема присоединения системы вентиляции"
                            android:background="@drawable/frame_rectangle"
                            style="@style/GvItemsTheme"
                    />
                    <EditText
                            android:id="@+id/actTip10NalSw"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:maxLength="100"
                            android:inputType="textMultiLine"
                            android:maxLines="3"
                            android:hint="Схема присоединения системы вентиляции"
                            android:background="@drawable/frame_rectangle"
                            style="@style/GvItemsTheme"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Схема присоединения системы ГВС"
                            android:background="@drawable/frame_rectangle"
                            style="@style/GvItemsTheme"
                    />
                    <EditText
                            android:id="@+id/actTip10NalGv"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:maxLength="100"
                            android:inputType="textMultiLine"
                            android:maxLines="3"
                            android:hint="Схема присоединения системы ГВС"
                            android:background="@drawable/frame_rectangle"
                            style="@style/GvItemsTheme"
                    />
                </LinearLayout>
            </LinearLayout>

            <HorizontalScrollView
                    android:id="@+id/actTip10Grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                <LinearLayout
                        android:id="@+id/actTip10LvUch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_height="match_parent"
                                android:layout_width="50dp"
                                android:text="№\nп/п"
                                android:paddingVertical="5dp"
                                android:background="@drawable/frame_rectangle"
                                style="@style/GvHeaderThemeActs"
                        />
                        <TextView
                                android:layout_height="match_parent"
                                android:layout_width="200dp"
                                android:text="Тип участка"
                                android:paddingVertical="5dp"
                                android:background="@drawable/frame_rectangle"
                                style="@style/GvHeaderThemeActs"
                        />
                        <TextView
                                android:layout_height="match_parent"
                                android:layout_width="120dp"
                                android:text="Диаметр \nпод. тр-д"
                                android:paddingVertical="5dp"
                                android:background="@drawable/frame_rectangle"
                                style="@style/GvHeaderThemeActs"
                        />
                        <TextView
                                android:layout_height="match_parent"
                                android:layout_width="120dp"
                                android:text="Длина \nпод. тр-д"
                                android:paddingVertical="5dp"
                                android:background="@drawable/frame_rectangle"
                                style="@style/GvHeaderThemeActs"
                        />
                        <TextView
                                android:layout_height="match_parent"
                                android:layout_width="150dp"
                                android:text="Тип прокл. \nпод. тр-д"
                                android:paddingVertical="5dp"
                                android:background="@drawable/frame_rectangle"
                                style="@style/GvHeaderThemeActs"
                        />
                        <TextView
                                android:layout_height="match_parent"
                                android:layout_width="120dp"
                                android:text="Диаметр \nобр. тр-д"
                                android:paddingVertical="5dp"
                                android:background="@drawable/frame_rectangle"
                                style="@style/GvHeaderThemeActs"
                        />
                        <TextView
                                android:layout_height="match_parent"
                                android:layout_width="120dp"
                                android:text="Длина \nобр. тр-д"
                                android:paddingVertical="5dp"
                                android:background="@drawable/frame_rectangle"
                                style="@style/GvHeaderThemeActs"
                        />
                        <TextView
                                android:layout_height="match_parent"
                                android:layout_width="150dp"
                                android:text="Тип прокл.обр. тр-д"
                                android:paddingVertical="5dp"
                                android:background="@drawable/frame_rectangle"
                                style="@style/GvHeaderThemeActs"
                        />
                        <TextView
                                android:layout_height="match_parent"
                                android:layout_width="150dp"
                                android:text="Глубина залегания"
                                android:paddingVertical="5dp"
                                android:background="@drawable/frame_rectangle"
                                style="@style/GvHeaderThemeActs"
                        />
                    </LinearLayout>
                </LinearLayout>

            </HorizontalScrollView>


            <Button
                    android:id="@+id/btnActTip10AddGridRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="   Добавить ещё один участок   "
                    android:drawableEnd="@drawable/ic_plus_gray"
                    android:backgroundTint="@color/colorLightLightGray"
                    android:background="@color/colorWhite"
                    android:tint="@color/colorPrimaryDark"
                    style="?android:attr/borderlessButtonStyle"
            />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:text="@string/podpisi_kts"
                        style="@style/TvCaptionTheme"
                        android:layout_marginHorizontal="4dp"
                />

                <EditText
                        android:id="@+id/actTip10PodpisiFioEso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fio_kts"
                        android:maxLength="500"
                        android:maxLines="2"
                        style="@style/EtDataThemeNoFrame"
                        android:inputType="textMultiLine"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:text="Акт обследования получил"
                        style="@style/TvCaptionTheme"
                        android:layout_marginHorizontal="4dp"
                />

                <TextView
                        android:id="@+id/actTip10FioPodp2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TvDataTheme"
                />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
            android:id="@+id/actTip10Buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/frame_rectangle"
    >
        <Spinner
                android:id="@+id/actTip10SpCopyText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"
        />
        <Button
                android:text="  Создать   акт  "
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCreateActPreddogAsuse"
                android:layout_margin="10dp"
        />
        <Button
                android:text="  Подписать   акт  "
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:id="@+id/btnSignActPreddogAsuse"
                android:layout_margin="10dp"
        />
    </LinearLayout>
</RelativeLayout>